<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Android" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/dl_primary</item>
        <item name="colorOnPrimary">@color/dl_secondary</item>
        <item name="android:statusBarColor">@color/dl_primary</item>
        <item name="android:windowBackground">@color/dl_primary</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@color/dl_primary</item>
        <item name="android:editTextBackground">@drawable/input_field_background</item>
        <item name="android:editTextColor">@color/dl_primary</item>
        <item name="android:textColorHint">@android:color/black</item>
    </style>

    <style name="ButtonStyling">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginHorizontal">40dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dl_secondary</item>
    </style>

    <style name="Theme.Android" parent="Base.Theme.Android" />
</resources>
